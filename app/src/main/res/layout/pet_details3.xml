<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pet_details3"
    android:background="@color/lightYellow"
    android:id="@+id/eventPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/petCard"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="25dp"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pet4" />

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="0dp"
                android:layout_weight="9"
                android:layout_marginTop="30dp"
                android:backgroundTint="#CCCCCC"
                android:layout_gravity="start|center"
                android:elevation="10dp"
                app:cornerRadius="10dp"
                app:elevation="10dp"
                android:text="Dogge     Dog â€¢ 6y 2m"
                android:textSize="20sp"
                android:textStyle="bold"
                >
            </com.google.android.material.button.MaterialButton>


        </LinearLayout>
        
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            >
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_and_age"
                android:layout_alignTop="@id/About_me"
                android:layout_marginLeft="50dp"
                android:gravity="center|start"
                android:text="About me"
                android:textSize="20dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="356dp" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/gender"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="4"
                android:backgroundTint="#CCCCCC"
                android:elevation="10dp"
                android:text="Gender Male"
                android:textSize="13sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:elevation="10dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/color"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_toRightOf="@+id/gender"
                android:layout_marginBottom="0dp"
                android:backgroundTint="#CCCCCC"
                android:elevation="10dp"
                android:text="Color Yellow"
                android:textSize="13sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:elevation="10dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/weight"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_toRightOf="@+id/color"
                android:layout_marginBottom="0dp"
                android:backgroundTint="#CCCCCC"
                android:elevation="10dp"
                android:text="Weight 3.2 kg"
                android:textSize="13sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:elevation="10dp">

            </com.google.android.material.button.MaterialButton>



        </RelativeLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dogge is a loving cat who loves eating, sleeping, and cuddling! During winter, he sleeps 20 hours a day, and his favorite food is shrimp. He is looking for a fur friend to play with!"
                android:textSize="16sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">
                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_baseline_cancel_24" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight="9"
                        android:backgroundTint="#FFCCCC"
                        android:elevation="10dp"
                        android:text="Message me"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:cornerRadius="20dp"
                        app:elevation="10dp">

                    </com.google.android.material.button.MaterialButton>
        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>