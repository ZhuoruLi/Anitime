<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <activity
        android:id="@+id/nav_logout"
        android:name="com.example.anitime.LogInUser"
        android:label="@string/menu_logout"
        tools:layout="@layout/activity_log_in_user" />

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.anitime.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_pet_profiles" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.anitime.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_your_profile" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.anitime.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_events" />
</navigation>